import cv2

cap = cv2.VideoCapture(0)

# –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –∫–∞–º–µ—Ä—ã
cap.set(cv2.CAP_PROP_FRAME_WIDTH, 640)
cap.set(cv2.CAP_PROP_FRAME_HEIGHT, 480)

cv2.startWindowThread()  # üö® –Ω—É–∂–Ω–æ –≤—ã–∑—ã–≤–∞—Ç—å –¥–ª—è Qt!

while True:
    ret, frame = cap.read()
    if not ret:
        print("–ù–µ —É–¥–∞–ª–æ—Å—å –ø–æ–ª—É—á–∏—Ç—å –∫–∞–¥—Ä")
        break

    frame = cv2.flip(frame, 1)  # –ó–µ—Ä–∫–∞–ª–∏—Ä–æ–≤–∞–Ω–∏–µ
    cv2.imshow("–ü—Ä–æ—Å—Ç–æ –∫–∞–º–µ—Ä–∞", frame)

    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

cap.release()
cv2.destroyAllWindows()
