import cv2

cap = cv2.VideoCapture(0)

# Ставим фиксированное разрешение
cap.set(cv2.CAP_PROP_FRAME_WIDTH, 640)
cap.set(cv2.CAP_PROP_FRAME_HEIGHT, 480)

while True:
    ret, frame = cap.read()
    if not ret:
        print("Не удалось получить кадр")
        break

    frame = cv2.flip(frame, 1)  # Зеркалить для естественного вида
    cv2.imshow("Просто камера", frame)

    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

cap.release()
cv2.destroyAllWindows()
